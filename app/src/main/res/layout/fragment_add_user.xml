<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".fragments.AddUserFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/userImageCard"
                    android:layout_width="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/user_image_iv"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userImageCard"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:text="Add Profile Image"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="08dp"
                    android:background="@drawable/white_bg"
                    android:elevation="0.1dp"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:shadowColor="@color/colorWhite"
                    android:text="Username"
                    android:textColor="#99000000"
                    android:textSize="11.5sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/material_edt_bg"
                    android:elevation="0dp"
                    android:outlineProvider="none" />

                <EditText
                    android:id="@+id/username_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:hint="Username ( Max 35 Words )"
                    android:inputType="text"
                    android:maxLength="35"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/lightBlack"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="08dp"
                    android:background="@drawable/white_bg"
                    android:elevation="0.1dp"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:shadowColor="@color/colorWhite"
                    android:text="UserId"
                    android:textColor="#99000000"
                    android:textSize="11.5sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/material_edt_bg"
                    android:elevation="0dp"
                    android:outlineProvider="none" />

                <EditText
                    android:id="@+id/userId_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:hint="Enter UserId"
                    android:inputType="number"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/lightBlack"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="08dp"
                    android:background="@drawable/white_bg"
                    android:elevation="0.1dp"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:shadowColor="@color/colorWhite"
                    android:text="Department"
                    android:textColor="#99000000"
                    android:textSize="11.5sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/material_edt_bg"
                    android:elevation="0dp"
                    android:outlineProvider="none" />

                <EditText
                    android:id="@+id/department_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:hint="Enter User Department"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/lightBlack"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="08dp"
                    android:background="@drawable/white_bg"
                    android:elevation="0.1dp"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:shadowColor="@color/colorWhite"
                    android:text="Address"
                    android:textColor="#99000000"
                    android:textSize="11.5sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/material_edt_bg"
                    android:elevation="0dp"
                    android:outlineProvider="none" />

                <EditText
                    android:id="@+id/address_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:hint="Enter user Address"
                    android:inputType="textMultiLine"
                    android:maxLength="35"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="15dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/lightBlack"
                    android:textSize="14sp" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addUserBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/colorWhite"
        style="@style/Widget.MaterialComponents.Button"/>

</RelativeLayout>